# scrollback buffer size
defscrollback 5000

# prevent curses apps from polluting scrollback buffer
altscreen on

hardstatus on
hardstatus alwayslastline
hardstatus string "%{=r d}%-w%{+b d}[%n %t]%{-}%+w %=%{+b}|%{-} %H %{+b}|%{-} %l %{+b}|%{-} %d/%m %c "

caption always "%{=B bY}%50=%+-012=D E V E L O P M E N T"

# use `showkey -a` to find the sequence generated by particular keyboard buttons
bindkey "^[OP" prev  # ctrl-left
bindkey "^[OQ" next  # ctrl-right
bindkey "^[[23~" caption always "%{=B rY}%50=%+-010=P R O D U C T I O N"
bindkey "^[[24~" caption always "%{=B bY}%50=%+-012=D E V E L O P M E N T"
